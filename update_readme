#!/bin/bash

# 从 Obsidian md 文档中更新 README.md 文档

obsd_md_path="/mnt/d/obsidian-md"
if [[ $HOSTNAME =~ "DESKTOP" ]]; then
    obsd_md_path="/mnt/e/obsidian-md"
fi

obsd_readme=${obsd_md_path}/TA-related/MMMS-related/MMMS-homework-questions.md

repo_path=$HOME/scripts/MMMS-homework-questions
repo_readme=${repo_path}/README.md

cp ${obsd_readme} ${repo_readme}


git_update(){
    BRANCH=$(git branch --show-current)
    git status --short --branch
    echo
    git add ${readme_fn}
    git commit -m "update ${readme_fn}"
    echo
    # git push origin ${BRANCH}
}


update_num(){
    cd ${repo_path}

    update_md_num=$(git status --short --branch | grep "README.md" | wc -l)

    if [[ $update_md_num -eq 0 ]]; then
        echo -e "\nREADME.md file is latest."
    else
        echo -e "\nREADME.md file is updated."
        git_update
    fi

    cd - > /dev/null 2>&1 
}


update_num
